<div id="wrapper">

    <h1 class="title center">Saved Articles</h1>
    <a class="button is-large is-info is-outlined" href="/" id="viewArticles">View Scraped Articles</a>
    </br>
    </br>
    <div id="articles">
        {{#each article}}
        <div id="container" class="article-content" data-id="{{this._id}}">
            <div id="title">
                <strong>{{this.title}}</strong>
            </div>
            <div id="summary">
                {{this.summary}}
            </div>
            <div id="link">
                <a target='_blank' href="{{this.link}}">Get the recipe here</a>
            </div>

            {{#each notes}}
            <div id="notes" class="note-content" data-id="{{this._id}}">
                <h4>Notes: {{this.body}}</h4>
            </div>
            {{/each}}

            <a class="button is-small is-info makeNote" data-id="{{this._id}}">Note</a>
            <a class="button is-small is-info deleteArticle" data-id="{{this._id}}">Delete</a>
        </div>
        </br>
        {{/each}}
    </div>
    <div id="notes">
        <div class="modal">
            <div class="modal-content"></div>
            <button class="modal-close is-small" aria-label="close"></button>
        </div>
    </div>
</div>
